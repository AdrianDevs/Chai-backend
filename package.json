{
  "name": "chai-api",
  "version": "1.0.0",
  "description": "RESTful API for the Chai chat app",
  "main": "index.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "npx prettier --write src",
    "format:check": "npx prettier --check src",
    "test": "vitest",
    "test:related": "vitest --run related",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:ci": "vitest --run",
    "gitleaks": "gitleaks detect --verbose --source .",
    "migration:down": "kysely migrate down",
    "migration:latest": "kysely migrate latest",
    "migration:list": "kysely migrate list",
    "migration:rollback-all": "kysely migrate rollback --all false",
    "migration:up": "kysely migrate up",
    "clean": "rimraf dist",
    "copy-assets": "ts-node tools/copyAssets.ts",
    "build": "npm-run-all lint format clean && tsc --project tsconfig.json && tsc-alias -p tsconfig.json && npm run copy-assets",
    "start": "node dist/index.js",
    "local": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev": "nodemon"
  },
  "keywords": [
    "node",
    "express",
    "typescript"
  ],
  "author": "AdrianDevs",
  "license": "ISC",
  "validate-branch-name": {
    "pattern": "^(master|main|develop){1}$|^(feature|fix|hotfix|release|text|experimental)/.+$",
    "errorMsg": "Branch name validation failed"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "^9.18.0",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.6",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.11.11",
    "@types/shelljs": "^0.8.15",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "fs-extra": "^11.3.0",
    "globals": "^15.14.0",
    "kysely-ctl": "^0.10.1",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "shelljs": "^0.8.5",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "validate-branch-name": "^1.3.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "bcryptjs": "^3.0.0",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.5",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.1",
    "tsconfig-paths": "^4.2.0"
  }
}
